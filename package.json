{
  "name": "t-browser",
  "version": "1.0.0",
  "author": {
    "name": "Antony Santos",
    "email": "antonyc828@gmail.com",
    "url": "http://github.com/antonycms/"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "electron-context-menu": "^2.0.1",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/styled-components": "4.0.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "concurrently": "^5.2.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "prettier": "^2.0.5",
    "wait-on": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "dev": "concurrently --kill-others \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 &&  env NODE_ENV=development yarn electron .\"",
    "dist:linux": "yarn build && electron-builder --linux",
    "dist": "yarn build && electron-builder && rm -r build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.tbrowser.app",
    "productName": "TBrowser",
    "copyright": "Copyright Â© 2020 Antony Santos",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/assets/logo.png"
    },
    "nsis": {
      "oneClick": "false",
      "allowToChangeInstallationDirectory": "true",
      "perMachine": "true"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/assets/logo.png",
      "category": "Development"
    }
  },
  "resolutions": {
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8"
  }
}
